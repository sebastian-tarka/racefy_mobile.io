# Racefy App Environment Configuration
# Copy this file to .env and update with your values
# .env is gitignored and will not be committed

# Your local machine's IP address for development
# Find it with: ip addr show | grep "inet " (Linux)
# Or: ipconfig getifaddr en0 (macOS)
API_LOCAL_IP=192.168.1.100

# Production API URL
API_PRODUCTION_URL=https://api.racefy.app/api

# API Port for local development (Laravel Sail default is 8080)
API_LOCAL_PORT=8080
